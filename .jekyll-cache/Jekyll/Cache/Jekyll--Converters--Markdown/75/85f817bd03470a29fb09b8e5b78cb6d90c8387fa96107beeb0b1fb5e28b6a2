    <center><big><strong>Data Science to fight against COVID-19</strong></big></center>
    <center><small>Tuesday, 30 March, 2021 - 14:30, WEST UTC+1</small></center>
    
    <center><small>Session Chair: <b style="font-family: 'Courier New', monospace; color: black;">Joaquim Jorge</b></small></center>
    
    
    
    
    <!-- TAKE ME TO THE EVENT START -->
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
